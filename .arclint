{
  "exclude": [
    "(^_site/)",
    "(^javascripts/external/)"
  ],
  "linters": {
    "filename": {
      "type": "filename"
    },
    "json": {
      "type": "json",
      "include": [
        "(^\\.arcconfig$)",
        "(^\\.arclint$)",
        "(\\.json$)"
      ]
    },
    "merge-issues": {
      "type": "merge-conflict"
    },
    "spelling": {
      "type": "spelling"
    },
    "text": {
      "type": "text",
      "text.max-line-length": 160,
      "exclude": [
        "(^images)"
      ]
    },
    "jscs": {
      "type": "jscs",
      "include": "(\\.js$)",
      "exclude": [
        "(^javascripts/external/)"
      ],
      "jscs.config": ".jscsrc"
    }
  }
}
